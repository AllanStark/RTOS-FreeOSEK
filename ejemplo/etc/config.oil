OSEK OSEK {

OS	ExampleOS {
    STATUS = EXTENDED;
    ERRORHOOK = TRUE;
    PRETASKHOOK = FALSE;
	POSTTASKHOOK = FALSE;
	STARTUPHOOK = FALSE;
	SHUTDOWNHOOK = FALSE;
	USERESSCHEDULER = FALSE;
	MEMMAP = FALSE;
};

APPMODE = AppMode1;

TASK TaskInit {
    PRIORITY = 1;
    ACTIVATION = 1;
    AUTOSTART = TRUE {
        APPMODE = AppMode1;
    }
    STACK = 512;
    TYPE = BASIC;
    SCHEDULE = NON;
}

TASK TaskBlink {
    PRIORITY = 10;
    ACTIVATION = 1;
    STACK = 512;
    TYPE = BASIC;
    SCHEDULE = FULL;
}
TASK TaskBlue {
    PRIORITY = 10;
    ACTIVATION = 1;
    STACK = 512;
    TYPE = BASIC;
    SCHEDULE = FULL;
}
TASK TaskRed {
    PRIORITY = 10;
    ACTIVATION = 1;
    STACK = 512;
    TYPE = BASIC;
    SCHEDULE = FULL;
}
TASK TaskGreen {
    PRIORITY = 10;
    ACTIVATION = 1;
    STACK = 512;
    TYPE = BASIC;
    SCHEDULE = FULL;
}

ALARM ActivateTaskBlink {
    COUNTER = SoftwareCounter;
    ACTION = ACTIVATETASK {
        TASK = TaskBlink;
    }
}
ALARM ActivateTaskGreen {
    COUNTER = SoftwareCounter;
    ACTION = ACTIVATETASK {
        TASK = TaskGreen;
    }
}
ALARM ActivateTaskRed {
    COUNTER = SoftwareCounter;
    ACTION = ACTIVATETASK {
        TASK = TaskRed;
    }
}
ALARM ActivateTaskBlue {
    COUNTER = SoftwareCounter;
    ACTION = ACTIVATETASK {
        TASK = TaskBlue;
    }
}

COUNTER HardwareCounter {
   MAXALLOWEDVALUE = 100;
   TICKSPERBASE = 1;
   MINCYCLE = 1;
   TYPE = HARDWARE;
   COUNTER = HWCOUNTER0;
};

COUNTER SoftwareCounter {
   MAXALLOWEDVALUE = 5000;
   TICKSPERBASE = 1;
   MINCYCLE = 1;
   TYPE = SOFTWARE;
};

ALARM IncrementSWCounter {
   COUNTER = HardwareCounter;
   ACTION = INCREMENT {
      COUNTER = SoftwareCounter;
   };
   AUTOSTART = TRUE {
      APPMODE = AppMode1;
      ALARMTIME = 1;
      CYCLETIME = 1;
   };
};

};
